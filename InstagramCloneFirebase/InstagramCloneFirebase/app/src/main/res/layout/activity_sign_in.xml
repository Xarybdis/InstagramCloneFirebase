<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity">

    <EditText
        android:id="@+id/signInActivity_emailText"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/signInActivity_passwordlText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/signInActivity_emailText"
        app:layout_constraintTop_toBottomOf="@+id/signInActivity_emailText" />

    <Button
        android:id="@+id/signInActivity_signUpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:onClick="createAccount"
        android:text="Sign Up"
        app:layout_constraintStart_toStartOf="@+id/signInActivity_passwordlText"
        app:layout_constraintTop_toBottomOf="@+id/signInActivity_passwordlText" />

    <Button
        android:id="@+id/signInActivity_signInButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:onClick="signIn"
        android:text="Sign IN"
        app:layout_constraintEnd_toEndOf="@+id/signInActivity_passwordlText"
        app:layout_constraintTop_toBottomOf="@+id/signInActivity_passwordlText" />
</android.support.constraint.ConstraintLayout>